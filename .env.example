# Sessions Management System - Environment Configuration

# Database
POSTGRES_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql+asyncpg://sessions:your-secure-password-here@postgres:5432/sessions

# Backend
SECRET_KEY=your-secret-key-at-least-32-characters-long
DEBUG=false

# Google OAuth (for admin authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/v1/admin-auth/callback

# API Configuration
API_URL=http://backend:8000

# Email Configuration (optional - not currently implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@your-domain.com

# OpenTelemetry (optional)
# OTEL_ENABLED=true
# OTEL_EXPORTER_OTLP_ENDPOINT=http://your-otel-collector:4317
# OTEL_SERVICE_NAME=sessions-backend

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAGIC_LINK_RATE_LIMIT_PER_MINUTE=3
MAGIC_LINK_RATE_LIMIT_PER_HOUR=10
